<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cityName"
        style="@style/WeatherTextView"
        android:layout_marginTop="@dimen/city_name_margin_top"
        android:padding="@dimen/layout_padding"
        android:textSize="@dimen/city_text_size"
        tools:text="Донецк" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperatureValue"
            style="@style/WeatherTextView"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/temperature_text_size"
            tools:text="30°" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/weather_image_size"
            android:layout_height="@dimen/weather_image_size"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/ic_baseline_cloud_queue_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/condition"
        style="@style/WeatherTextView"
        tools:text="Облачно с прояснениями" />

    <TextView
        android:id="@+id/feelsLikeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ощущается как 25°" />

</LinearLayout>