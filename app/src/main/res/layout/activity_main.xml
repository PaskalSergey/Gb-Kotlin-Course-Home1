<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_fun_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_example_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать тему урока" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_example_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать дату урока" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_example_cycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверить циклы" />

</LinearLayout>